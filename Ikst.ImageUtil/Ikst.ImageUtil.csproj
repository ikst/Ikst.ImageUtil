    <Authors>ikst</Authors>
    <Company>ikst</Company>
    <PackageProjectUrl>https://github.com/ikst/Ikst.ImageUtil</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ikst/Ikst.ImageUtil</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>Bitmap Image Resize</PackageTags>
    <Copyright></Copyright>
    <Description>This is a utility class to simplify image-related operations such as image resizing and file output.
It is mainly provided as an extension method of the System.Drawing.Image class.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Version>0.2.0</Version>
    <PackageReleaseNotes>Please check the following.
https://github.com/ikst/Ikst.ImageUtil/blob/master/README.md</PackageReleaseNotes>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|netcoreapp2.1|AnyCPU'">
